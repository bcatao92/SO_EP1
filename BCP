package escalonador;

public class Processo {
        //Usareamos as letras "p", "e" e "b" para se referir aos estados pronto, executando e bloqueado respectivamente.
	String nome;
	private char estado;
	final String [] tarefas;  //O processo em si.
	
	public Processo(String nome, String[] tarefas, char estado) {
		this.nome = nome;
		this.setEstado(estado);
		this.tarefas = instructions;
	}
	
	public void setEstado(char estado) {
		this.estado = estado;
	}

	public char getEstado() {
		return estado;
	}

}

public class BCP implements Comparable<BCP> {
	Processo processo;
	int priori;
	int cred;
	int PC;
	int X;
	int Y;
	int espera;
	int flag;

	public BCP(Processo processo, int priori) {
		this.processo = processo;
		this.priori = prioridade;
		this.cred = priori;
		this.PC = 0;
		this.X = 0;
		this.Y = 0;
		this.espera = 0;
		this.flag = 0;
	}

	public void decrementaCredito() {
		this.cred--;
	}

	public int compareTo(BCP bcp) {
		if (this.cred < bcp.cred)
			return 1;
		else if (this.cred > bcp.cred)
			return -1;
		else
			return 0;
	}
}
